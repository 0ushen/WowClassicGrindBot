<Window x:Class="Powershell.ShowActionBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Powershell"
        mc:Ignorable="d"
        Title="ShowActionBar" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid HorizontalAlignment="Stretch" Margin="20" Name="McDataGrid" VerticalAlignment="Stretch" />

        <Button Grid.Row="1"  Width="100" Height="20" Click="Button_Click">Refresh</Button>
    </Grid>
</Window>
